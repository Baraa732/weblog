<h3>Sign In</h3>

<form action="/admin" method="POST" autocomplete="off">
   <!-- حقل مزيف لخداع Chrome -->
   <input type="text" name="fakeusernameremembered" style="display:none">
   <input type="password" name="fakepasswordremembered" style="display:none">

   <label for="username">Username</label>
   <input type="text" placeholder="Enter Username" name="username" id="username" autocomplete="new-username" required>

   <label for="password">Password</label>
   <input type="password" placeholder="Enter Password" name="password" id="password" autocomplete="new-password"
      required>

   <input type="submit" value="Login" class="btn">
</form>
<script>
   window.addEventListener("pageshow", function (event) {
      if (event.persisted) {
         window.location.reload();
      }
   });
</script>


